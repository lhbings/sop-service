<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 注意：文件名必须跟Dao类名字一致，因为是根据文件名做关联。 -->
<mapper namespace="com.example.sopservice.mapper.PersonMapper">

    <select id="findByCondition" resultType="com.example.sopservice.entity.Person">
        SELECT
       id,name,age
        FROM person
        WHERE 1=1
        <if test="id !=null">
            AND id = #{id}
        </if>
        <if test="name !=null and name != ''">
            AND name = #{name}
        </if>
        <if test="status !=null">
            AND status = #{status}
        </if>
    </select>

</mapper>
